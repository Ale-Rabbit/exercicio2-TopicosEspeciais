<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Placa"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextCor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextPlaca"
        android:layout_below="@+id/editTextPlaca"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Cor"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewTitleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerMarca"
        android:layout_centerHorizontal="true"
        android:text="Selecione a marca:"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <Spinner
        android:id="@+id/spinnerMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <RadioGroup
        android:id="@+id/radioGroupMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerMarca"
        android:layout_marginTop="42dp"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/radioButtonNovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButtonSemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semi-novo" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="Cadastrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

    <Button
        android:id="@+id/buttonExcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonCadastrar"
        android:layout_alignBottom="@+id/buttonCadastrar"
        android:layout_toStartOf="@+id/textViewTitleSpinner"
        android:text="Excluir"
        android:visibility="invisible" />
</RelativeLayout>
